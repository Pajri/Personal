@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Home";
}

<div class="row h-100">
    <div class="d-none d-sm-block col-md-6"></div>
    <div class="d-none d-sm-block col-md-1"></div>
    <div class="col-md-3 py-4 bg-light">
        <section class="vertical-center">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4 class="text-dark mb-4">Create a new account.</h4>
                <div class="form-group">
                    <label class="sr-only" asp-for="Username"></label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-white border-1">
                                <span class="fa fa-user"></span>
                            </div>
                        </div>
                        <input asp-for="Username" class="form-control rounded-right bg-white border-1" placeholder="username" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger mt-2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="sr-only"></label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-white border-1">
                                @@
                            </div>
                        </div>
                        <input asp-for="Email" class="form-control rounded-right bg-white border-1" placeholder="email"/>
                    </div>
                    <span asp-validation-for="Email" class="text-danger mt-2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="sr-only"></label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-white border-1">
                                <span class="fa fa-user-circle"></span>
                            </div>
                        </div>
                        <input asp-for="FirstName" class="form-control rounded-right bg-white border-1" placeholder="first name" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger mt-2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="sr-only"></label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-white border-1">
                                <span class="fa fa-user-circle"></span>
                            </div>
                        </div>
                        <input asp-for="LastName" class="form-control rounded-right bg-white border-1" placeholder="last name" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger mt-2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="sr-only"></label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-white border-1">
                                <span class="fa fa-lock"></span>
                            </div>
                        </div>
                        <input asp-for="Password" class="form-control rounded-right bg-white border-1" placeholder="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger mt-2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="sr-only"></label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-white border-1">
                                <span class="fa fa-lock"></span>
                            </div>
                        </div>
                        <input asp-for="ConfirmPassword" class="form-control rounded-right bg-white border-1" placeholder="confirm password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger mt-2"></span>
                </div>
                <button type="submit" class="btn btn-default bg-warning text-white">Register</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
