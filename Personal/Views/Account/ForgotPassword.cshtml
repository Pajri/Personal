@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Home";
}

<div class="row h-100">
    <div class="d-none d-sm-block col-md-6"></div>
    <div class="d-none d-sm-block col-md-1"></div>
    <div class="col-md-3 py-4 bg-light">
        <section class="vertical-center">
            <form asp-action="ForgotPassword" method="post">
                <h4 class="text-dark mb-4">Enter your email.</h4>
                <div class="form-group">
                    <label asp-for="Email" class="sr-only"></label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-white border-1">
                                <span class="fa fa-user"></span>
                            </div>
                        </div>
                        <input asp-for="Email" class="form-control rounded-right bg-white border-1" placeholder="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger mt-2"></span>
                </div>
                <button type="submit" class="btn btn-default bg-warning text-white">Submit</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
