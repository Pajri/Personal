@model IEnumerable<Personal.Models.PersonalPost>

@{
    ViewData["Title"] = "Index";
}

<form style="margin-top:20px; border-bottom: solid black 1px;" asp-controller="Posts" asp-action="Create" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <textarea name="content" rows="3" class="form-control" placeholder="How was your day ?'" required></textarea>
    </div>
    <div class="form-group">
        Photo : <input type="file" name="images" multiple />
    </div>
    <div class="form-group">
        <input type="submit" value="Post !" />
    </div>
</form>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsertDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @if(item.ImageUrls != null && item.ImageUrls != "")
                    {
                        string[] arrImageUrls = item.ImageUrls.Split(";");
                        foreach (var url in arrImageUrls)
                        {
                            <img src="@url" width="200px" height="200px"/><br/>
                        }
                    }
                   
                </td>
                <td>
                    @string.Format("{0:dd MMMM yyyy hh:mm tt}", item.InsertDate)
                </td>
                <td>
                    @string.Format("{0:dd MMMM yyyy hh:mm tt}",item.LastUpdated)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="display:block;">Edit</a>
                    <form asp-controller="Posts" asp-action="Delete">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button class="btn btn-danger" style="width:100%;">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<ul class="pagination">            
    @if ((int)ViewData["current_page"] != 1)
    {
        <li class="page-item"> 
            <a class="page-link" href="/posts/page/@((int)ViewData["current_page"] - 1)">Previous</a>
        </li>
    }

    @for (var i = 1; i <= (int)ViewData["total_pages"]; i++)
    {
        if (i == (int)ViewData["current_page"])
        {
            <li class="page-item active"><a class="page-link" href="/posts/page/@i">@i</a></li>
            continue;
        }
        <li class="page-item"><a class="page-link" href="/posts/page/@i">@i</a></li>
    }

    @if ((int)ViewData["current_page"] != (int)ViewData["total_pages"])
    {
        <li class="page-item">
            <a class="page-link" href="/posts/page/@((int)ViewData["current_page"]+1)">Next</a>
        </li>
    }

</ul>