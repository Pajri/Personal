@using Microsoft.AspNetCore.Identity
@using Personal.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form class="ml-auto" asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserAsync(User).Result.FirstName</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link bg-warning text-white">Log out</button>
            </li>
        </ul>
    </form>
}