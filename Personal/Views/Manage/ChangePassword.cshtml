@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

        <form method="post" class="row py-4">
            <div class="col-md-6">
                <p class="font-weight-bold">Change Password</p>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-6"><label asp-for="OldPassword"></label></div>
                    <div class="col-md-6">
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-6"><label asp-for="NewPassword"></label></div>
                    <div class="col-md-6">
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-6"><label asp-for="ConfirmPassword"></label></div>
                    <div class="col-md-6">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-warning text-white rounded-0">Update password</button>
            </div>
        </form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
