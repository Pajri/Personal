{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.\\SQLEXPRESS;Initial Catalog=personal;Integrated Security=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\debug-.log",
          "restrictedToMinimumLevel": "Debug",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\info-.log",
          "restrictedToMinimumLevel": "Information",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\warning-.log",
          "restrictedToMinimumLevel": "Warning",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\error-.log",
          "restrictedToMinimumLevel": "Error",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\fatal-.log",
          "restrictedToMinimumLevel": "Fatal",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Personal"
    }
  },
  "PersonalConfig": {
    "Authentication": {
      "ForgotPassword": {
        "FromAddress": "admin@personal",
        "Subject": "Personal - Reset Password",
        "Body": "Please reset your password by clicking this <a href='$callbacUrl'>link</a>"
      }
    },
    "SMTP": {
      "Host": "localhost",
      "Port": 1025,
      "Username": "",
      "Password": ""
    }
  }
}
